// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  name         String
  email        String @unique
  password     String
}

model Customer {
  id           String @id @default(cuid())
  name         String
  email        String @unique
  image_url    String
}

model Invoice {
  id           String @id @default(cuid())
  customer_id  String
  amount       Int
  status       String
  date         String
}
  
model Revenue {  
  month        String
  revenue      Int
}